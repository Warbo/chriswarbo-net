#!/usr/bin/env bash

if [[ -n "$SOURCE" ]] && [[ -n "$DEST" ]]
then
    pandoc --filter panpipe                  \
           --filter panhandle                \
           --template templates/default.html \
           -s                                \
           -M path="$SOURCE"                 \
           -o "$DEST" "$SOURCE"
else
    pandoc --filter panpipe   \
           --filter panhandle \
           -s                 \
           --template templates/default.html
fi
