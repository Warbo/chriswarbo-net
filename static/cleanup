#!/usr/bin/env bash

# Clean up common detritus from HTML given on stdin

INPUT=$(cat)

# Tables should be given summaries, specified by a sibling with class "summary"
if echo "$INPUT" | grep "<table" > /dev/null
then
    echo "Summarising tables" 1>&2
    OUTPUT=$(echo "$INPUT" | summariseTables)
    INPUT="$OUTPUT"
fi

# Any empty <code> elements left from PanPipe should be stripped
if echo "$INPUT" | grep "<code></code>" > /dev/null
then
    echo "Stripping left-over <pre> and <code> elements" 1>&2
    OUTPUT=$(echo "$INPUT" | stripEmptyPreCode)
    INPUT="$OUTPUT"
fi

if echo "$INPUT" | grep "<summary" > /dev/null
then
    echo "Unwrapping paragraphs from summaries" 1>&2
    OUTPUT=$(echo "$INPUT" | unwrapSummaries)
    INPUT="$OUTPUT"
fi

echo "$INPUT"
