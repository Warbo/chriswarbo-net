#!/usr/bin/env bash

LINKS=$(xidel - -q --extract "//a/@href" < "$rendered/blog.html")

while read -r SOURCE
do
    [[ "x$SOURCE" = "x$rendered/blog/index.html" ]] && continue

    NAME=$(basename "$SOURCE" | rev | cut -d '.' -f 2- | rev)
    DEST="$rendered/blog/$NAME.html"
    if [[ ! -e "$DEST" ]]
    then
        echo "Can't find $DEST" 1>&2
        exit 1
    fi
    if ! echo "$LINKS" | grep "$NAME" > /dev/null
    then
        echo "blog/$NAME.html doesn't appear in blog.html" 1>&2
        exit 1
    fi
done < <(find "$rendered/blog/" -type f -o -type l)

exit 0
