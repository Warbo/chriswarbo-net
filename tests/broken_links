#! /usr/bin/env nix-shell
#! nix-shell -p linkchecker bash -i bash
RESULT=$(linkchecker --no-status                   \
                     --ignore-url=.xml             \
                     --ignore-url=/git             \
                     --ignore-url=/essays/repos    \
                     --config=static/linkcheckerrc \
                     rendered/index.html 2>&1)
CODE="$?"

[[ "$CODE" -eq 0 ]] || echo "$RESULT"

exit "$CODE"
